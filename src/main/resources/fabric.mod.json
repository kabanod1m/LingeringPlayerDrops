{
  "schemaVersion": 1,
  "id": "lingeringplayerdrops",
  "version": "${version}",
  "name": "LingeringPlayerDrops",
  "description": "A Fabric Minecraft mod that prevents items that players drop from ever despawning. Configure with gamerules playerDropItemsLinger and playerDeathItemsLinger.",
  "authors": [
    "kabanod1m"
  ],
  "contact": {
    "website": "winglessbirds.org",
    "repo": "https://github.com/kabanod1m/LingeringPlayerDrops"
  },
  "license": "MIT",
  "icon": "assets/lingeringplayerdrops/icon.png",
  "environment": "*",
  "entrypoints": {
    "client": [
      "org.winglessbirds.lingeringplayerdrops.client.LingeringPlayerDropsClient"
    ],
    "main": [
      "org.winglessbirds.lingeringplayerdrops.LingeringPlayerDrops"
    ]
  },
  "mixins": [
    "lingeringplayerdrops.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric": "*",
    "minecraft": "${minecraft_version}"
  }
}
